{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "yarn run build"
    },
    "deploy": {
        "startCommand": "yarn run start",
        "restartPolicyMaxRetries": 4,
        "restartPolicyType": "ALWAYS",
        "healthcheckPath": "/",
        "healthcheckTimeout": 300
    }
}